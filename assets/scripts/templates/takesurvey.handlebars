{{#each surveys as |survey|}}

  <div class="container-fluid bg-3">
    <div id="lndingpg_create_survey" class="row hidden">
      <form id='create-survey-form'>
        <fieldset>
          <legend>Take Survey - {{survey.title}}</legend>
          <br><br>
          <div id="question1">
            <label for="question-1-title">Question 1:</label>
            <input type="text" id="question" name="survey[questions.question1.questionDescription]" size="50" placeholder="Add question here" required><br>
            <input type="radio" value="strongly-disagree" checked> Strongly Disgree<br>
            <input type="radio" value="disagree" checked> Disagree<br>
            <input type="radio" value="neutral" checked> Neutral<br>
            <input type="radio" value="agree" checked> Agree<br>
            <input type="radio" value="strongly-agree" checked> Strongly Agree<br>
            <input type="hidden" name="survey[questions.question1.active]" value="true">
            <br>
         </div>
         <input id="take-survey" data-id="{{survey.id}}" type="submit" class="btn btn-primary btn-sm" name="submit" value="Submit Survey">
       </fieldset>
     </form>
   </div>
   <div id="lndingpg_view_dashboard" class="row hidden">
   <!-- List of surveys here-->
  </div>
  <div id="lndingpg_survey_list" class="row">
  <!-- List of surveys here-->
</div>
</div>

{{/each}}
