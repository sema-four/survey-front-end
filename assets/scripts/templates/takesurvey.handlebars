{{#each surveys as |survey|}}

  <div class="container-fluid bg-3">
    <div id="lndingpg_take_survey" class="row">
      <form id='take-survey-form'>
        <fieldset>
          <legend>Take Survey - {{survey.title}}</legend>
          <br><br>
          {{#each survey.questions as |question|}}
          <div data-id={{question.id}}>
            <input type="text" id="question" name="survey[questions.question1.questionDescription]" size="50" placeholder={{question.question.questionDescription}} required><br>
            <input type="radio" value="disagree"> Disagree<br>
            <input type="radio" value="neutral"> Neutral<br>
            <input type="radio" value="agree"> Agree<br>
            <input type="radio" value="strongly-agree"> Strongly Agree<br>
            <input type="hidden" name="survey[questions.question1.active]" value="true">
            <br>
         </div>
         {{/each}}
         <input id="take-survey" data-id="{{survey.id}}" type="submit" class="btn btn-primary btn-sm" name="submit" value="Submit Survey">
       </fieldset>
     </form>
   </div>
</div>

{{/each}}
